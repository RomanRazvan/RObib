<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D5E3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <Button
            android:id="@+id/cuza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Alexandru Ioan Cuza"
            android:textColor="#000000" />

        <Button
            android:id="@+id/batran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Mircea Cel Batran"
            android:textColor="#000000" />

        <Button
            android:id="@+id/viteazul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Mihai Viteazul"
            android:textColor="#000000" />

        <Button
            android:id="@+id/tepes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Vlad Tepes"
            android:textColor="#000000" />
    </LinearLayout>

</ScrollView>