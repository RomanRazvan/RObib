<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3D5E3">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


        <Button
            android:id="@+id/hagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Gheorghe Hagi"
            android:textColor="#000000" />

        <Button
            android:id="@+id/pope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Gheorghe Popescu"
            android:textColor="#000000" />

        <Button
            android:id="@+id/comaneci"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Nadia Comaneci"
            android:textColor="#000000" />

        <Button
            android:id="@+id/halep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#BD8577"
            android:text="Simona Halep"
            android:textColor="#000000" />

    </LinearLayout>

</ScrollView>