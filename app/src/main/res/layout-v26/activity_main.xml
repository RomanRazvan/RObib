<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundal"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/trimite"
        android:layout_width="246dp"
        android:layout_height="63dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="83dp"
        android:backgroundTint="#BD8577"
        android:text="Adaugă"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="362dp"
        android:layout_height="157dp"
        android:text="Personalități românești"
        android:textColor="#000000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <Button
        android:id="@+id/button2"
        android:layout_width="246dp"
        android:layout_height="63dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="83dp"
        android:backgroundTint="#BD8577"
        android:text="Informații"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="349dp"
        android:layout_marginBottom="16dp"
        android:alpha="?android:attr/secondaryContentAlpha"
        android:contentDescription="TODO"
        android:src="@drawable/pres"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>